          .attr("y2", function(d) { return d.target.y; });

      node
          .attr("cx", function(d) { return d.x; })
          .attr("cy", function(d) { return d.y; });
    }
*/
  });

  function dragstarted(d) {
    if (!d3.event.active) simulation.alphaTarget(0.3).restart();
    d.fx = d.x;
    d.fy = d.y;
  }

  function dragged(d) {
    d.fx = d3.event.x;
    d.fy = d3.event.y;
  }

  function dragended(d) {
    if (!d3.event.active) simulation.alphaTarget(0);
    d.fx = null;
    d.fy = null;
  }

   function getLinks(data){
        var result = [];
        var links = findClosest(data);
        var numVizinhos = new Uint8Array(data.length);
        for (var i = 0; i < links.length; i++) {
            if(numVizinhos[links[i].source] < n){

                numVizinhos[links[i].source] += 1;
                //numVizinhos[links[i].target] += 1;
                console.log(links[i].source + ' -> ' + links[i].target);
                //console.log(numVizinhos);
                result.push(links[i]);
            }
        }
        console.log(numVizinhos);
        return result;
    }

    function findClosest(irisjson){

        var result = [];
        //Calculate Euc. Dist
        for(var i=0; i < irisjson.length; i++){

          //result[i] = []; //by matrix
          
          for(var j = 0; j < irisjson.length ; j++){
              /*if (i >= j){
                continue;
              }*/
              if(i != j){
                var a1, a2 , a3 , a4 ;

              a1 = irisjson[i].sepal_length - irisjson[j].sepal_length;

              a2 = irisjson[i].sepal_width - irisjson[j].sepal_width;

              a3 = irisjson[i].petal_length - irisjson[j].petal_length;

              a4 = irisjson[i].petal_width - irisjson[j].petal_width;

              a1_diff = Math.pow(a1, 2);
              a2_diff = Math.pow(a2, 2);
              a3_diff = Math.pow(a3, 2);
              a4_diff = Math.pow(a4, 2);

              sum = a1_diff + a2_diff + a3_diff + a4_diff;

              //result[i][j] = Math.sqrt(sum); //by matrix
              //if(!existsObj(result, i, j)){
                result.push({"source": i , "target": j, "value": Math.sqrt(sum)});
                console.log("source: " + i + " target: " + j + " value: " + Math.sqrt(sum));
              //}
            }              
          }
        }
        result = result.sort(function(a, b){
            return a.value - b.value;
        });

        //debugger;

        
        return result;
    }

    function existsLink(currList, source, target){
      debugger;
      for (i = 0; i<currList.length; i++){
        if(currList[i].source == target && currList[i].target == source){
          return true;
        }
      }
      return false;
    }

    function colorScale(specie){
        if(specie === "setosa"){
            return "blue";
        }else{
            return "green";
        }
    }


</script>